
@model WebMVCApp.Areas.Admin.Models.Usuario

@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex, nofollow">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A layout example that shows off a blog page with a list of posts.">
    <title>Pure Admin Panel</title>

    <link rel="stylesheet" href="@Extra.baseUrl()www/vendor/purecss/pure-min.css">
    <link rel="stylesheet" href="@Extra.baseUrl()www/vendor/purecss/pure-responsive-min.css">
    <link rel="stylesheet" href="@Extra.baseUrl()www/css/admin/style.css">
</head>
<body>
    <div id="main" class="pure-g">
        <div class="sidebar pure-u-1 pure-u-md-1-2">
            <div class="header-large">
                <h1>Pure Admin</h1>
                <h2>Simple Admin Panel For Everyone</h2>

                <nav class="nav">
                    <ul>
                        <li>
                            <a class="pure-button active" href="login.html">Login</a>
                            <a class="pure-button" href="register.html">Register</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="content pure-u-1 pure-u-md-1-2">
            <div class="header-medium">

                <div class="items">
                    <h1 class="subhead">Login</h1>

                    <aside class="pure-message message-success">
                        <p><strong>SUCCESS</strong>: Success message.</p>
                    </aside>
                    <aside class="pure-message message-error">
                        <p><strong>ERROR</strong>: Error message.</p>
                    </aside>
                    <aside class="pure-message message-warning">
                        <p><strong>WARNING</strong>: Warning message.</p>
                    </aside>

                    @*@using (Html.BeginForm("Start", "Login"))*@
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "pure-form pure-form-stacked" }))
                    {
                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()
                        <!--form-- action="dashboard.html" method="get" class="pure-form pure-form-stacked"-->
                        <fieldset>
                            <pre>@ViewBag.sqlRes</pre>
                            <b>@ViewBag.msg</b>

                            @Html.LabelFor(model => model.nomuser)
                            @Html.EditorFor(model => model.nomuser, new { htmlAttributes = new { @class = "pure-input-1", @placeholder = "Ingrese Usuario" } })
                            @Html.ValidationMessageFor(model => model.nomuser)
                            <!--input id="email" type="email" placeholder="Email" class="pure-input-1" value=""-->

                            @Html.LabelFor(model => model.passuser)
                            @Html.EditorFor(model => model.passuser, new { htmlAttributes = new { @class = "pure-input-1", @placeholder = "Ingrese Clave" } })
                            @Html.ValidationMessageFor(model => model.passuser)
                            <!--input id="password" type="password" placeholder="Password" class="pure-input-1" value=""-->

                            <!--label for="remember" class="pure-checkbox">
                                <input id="remember" type="checkbox" value="1"> Remember me
                            </!--label-->

                            <div>@Html.ActionLink("Back to List", "Index")</div>

                            <button type="submit" class="pure-button button-success">Ingresar</button>
                        </fieldset>
                        <!--/form-->
                    }
                </div>

                <div class="footer">
                    <div class="pure-menu pure-menu-horizontal">
                        <ul>
                            <li class="pure-menu-item"><a href="http://purecss.io/" class="pure-menu-link">PURE CSS</a></li>
                            <li class="pure-menu-item"><a href="http://fikiruretgeci.com" class="pure-menu-link">FIKIR URETGECI</a></li>
                            <li class="pure-menu-item"><a href="http://pure-themes.com" class="pure-menu-link">PURE THEMES</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>